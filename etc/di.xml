<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <!-- Service interface bindings -->
    <preference for="Hryvinskyi\PageSpeedJsExtremeLazyLoadFrontendUi\Api\ScriptMarkerInterface"
                type="Hryvinskyi\PageSpeedJsExtremeLazyLoadFrontendUi\Model\ScriptMarker" />

    <!-- Plugin to add script markers to RequireJS configuration -->
    <type name="Magento\Framework\RequireJs\Config">
        <plugin name="add_requirejs_config_script_marker"
                type="Hryvinskyi\PageSpeedJsExtremeLazyLoadFrontendUi\Plugin\RequireJsConfigScriptMarker"
                sortOrder="100"/>
    </type>
</config>
