<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <!-- Service interface bindings -->
    <preference for="Hryvinskyi\PageSpeedJsExtremeLazyLoadFrontendUi\Api\ScriptMarkerInterface"
                type="Hryvinskyi\PageSpeedJsExtremeLazyLoadFrontendUi\Model\ScriptMarker" />

    <!-- Register lazy load processor in the processor pool -->
    <type name="Hryvinskyi\PageSpeedJsMergeFrontendUi\Model\MergeProcessorPool">
        <arguments>
            <argument name="processors" xsi:type="array">
                <item name="lazy_load" xsi:type="array">
                    <item name="processor" xsi:type="object">Hryvinskyi\PageSpeedJsExtremeLazyLoadFrontendUi\Model\LazyLoadMergeProcessor</item>
                    <item name="sortOrder" xsi:type="number">100</item>
                </item>
            </argument>
        </arguments>
    </type>

    <type name="Hryvinskyi\PageSpeedApi\Model\ModificationsList">
        <arguments>
            <argument name="modifications" xsi:type="array">
                <item name="extreme_lazy_load_js" xsi:type="array">
                    <item name="object" xsi:type="object">Hryvinskyi\PageSpeedJsExtremeLazyLoadFrontendUi\Model\LazyLoadModification</item>
                    <item name="sortOrder" xsi:type="number">300</item>
                </item>
            </argument>
        </arguments>
    </type>

    <!-- Plugin to add script markers to RequireJS configuration -->
    <type name="Magento\Framework\RequireJs\Config">
        <plugin name="add_requirejs_config_script_marker"
                type="Hryvinskyi\PageSpeedJsExtremeLazyLoadFrontendUi\Plugin\RequireJsConfigScriptMarker"
                sortOrder="100"/>
    </type>
</config>
